<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_stop_when_powerdown"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sub_title_text_marginleft"
            android:text="@string/stop_when_powerdown"
            android:textColor="@color/white_text_color"
            android:textSize="@dimen/item_name_text_size" />

        <Button
            android:id="@+id/btn_stop_power_show"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_bg"
            android:singleLine="true"
            android:text="10%"
            android:textColor="@color/green_divider_color" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/grid_divider_color" />

    <RelativeLayout
        android:id="@+id/layout_stop_when_shake"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sub_title_text_marginleft"
            android:text="@string/stop_when_shake"
            android:textColor="@color/white_text_color"
            android:textSize="@dimen/item_name_text_size" />

        <CheckBox
            android:id="@+id/cb_stop_when_shake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:button="@drawable/app_checkbox_selector" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/grid_divider_color" />

    <RelativeLayout
        android:id="@+id/layout_stop_when_screen_on"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sub_title_text_marginleft"
            android:text="@string/stop_when_screen_on"
            android:textColor="@color/white_text_color"
            android:textSize="@dimen/item_name_text_size" />

        <CheckBox
            android:id="@+id/cb_stop_when_screen_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:button="@drawable/app_checkbox_selector" />
    </RelativeLayout>

</LinearLayout>
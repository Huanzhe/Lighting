<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sub_title_text_marginleft"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_between"
            android:textColor="@color/white_text_color"
            android:textSize="@dimen/item_name_text_size" />

        <TextView
            android:id="@+id/tv_set_time_begin"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:text="@string/time_begin"
            android:textColor="@color/green_divider_color"
            android:textSize="@dimen/item_name_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:gravity="center"
            android:text="@string/time_to"
            android:textColor="@color/white_text_color"
            android:textSize="@dimen/item_name_text_size" />

        <TextView
            android:id="@+id/tv_set_time_end"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:text="@string/time_end"
            android:textColor="@color/green_divider_color"
            android:textSize="@dimen/item_name_text_size" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cb_set_time_sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/select_date"
                android:button="@null"
                android:gravity="center"
                android:text="日"
                android:textColor="@color/white_text_color" />

            <TextView
                android:id="@+id/cb_set_time_monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/select_date"
                android:button="@null"
                android:gravity="center"
                android:text="一"
                android:textColor="@color/white_text_color" />

            <TextView
                android:id="@+id/cb_set_time_tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/select_date"
                android:button="@null"
                android:gravity="center"
                android:text="二"
                android:textColor="@color/white_text_color" />

            <TextView
                android:id="@+id/cb_set_time_wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/select_date"
                android:button="@null"
                android:gravity="center"
                android:text="三"
                android:textColor="@color/white_text_color" />

            <TextView
                android:id="@+id/cb_set_time_thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/select_date"
                android:button="@null"
                android:gravity="center"
                android:text="四"
                android:textColor="@color/white_text_color" />

            <TextView
                android:id="@+id/cb_set_time_friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/select_date"
                android:button="@null"
                android:gravity="center"
                android:text="五"
                android:textColor="@color/white_text_color" />

            <TextView
                android:id="@+id/cb_set_time_saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/select_date"
                android:button="@null"
                android:gravity="center"
                android:text="六"
                android:textColor="@color/white_text_color" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>